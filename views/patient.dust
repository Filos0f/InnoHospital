<!doctype html>
<html lang="en-US">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>Sign in panel</title>
  <meta name="author" content="Sultan">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="css/patient.css">
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=ABeeZee:400,400italic">
  <script type="js/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
  <script type="js/javascript" src="js/formslider.js"></script>
<!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
</head>

<body>
  <div id="w">
    <h1>Login/Registration Form</h1>
    
    <div id="page">
      <div id="content-login">
        <h2>Login to the Site</h2>
        <div class="content">
        <form action="/registration" method="get">
  <div class="slidelink">
  <button id="patient" type="submit" class="btn btn-primary">Don't Have An Account? &rarr;</button>
  </div></form>
           
          <form id="login" name="login" action="/log" method="post">
            <label for="email">Email Address</label>
            <input type="email" name="email" id="email" class="txtfield" tabindex="1" autocomplete="off">
            
             <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" name="hashpassword" class="form-control txtfield" id="exampleInputPassword1" placeholder="Password">
        </div>
            <br>
            <input type="submit" name="loginbtn" id="loginbtn" value="Login" class="btn" tabindex="3">
          </form>
        </div>
      </div><!-- /end #content-login -->
      
      
      <div id="register1">
        <h2>Register a New Account (1/3)</h2>
        <div class="content">
        <a href="#" class="leftsidelink" id="showlogin">&larr; Already Have an Account? Login Now!</a>
        <form id="register" name="register" action="#" method="post">
          <label for="fname">First Name</label>
          <input type="text" name="fname" id="fname" class="txtfield" tabindex="4" autocomplete="off">
          
          <label for="lname">Last Name</label>
          <input type="text" name="lname" id="lname" class="txtfield" tabindex="5" autocomplete="off">

          <label for="newemail">Email Address</label>
          <input type="email" name="newemail" id="newemail" class="txtfield" tabindex="6" autocomplete="off">
          
         <label>Phone number</label>
          <input class="txtfield" type="tel" placeholder="1-(555)-555-5555" id="phone">
        <span> 
          <label class="form-check-label">
              
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                Male
              </label>
              <label class="form-check-label">
              
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                Female
          </label></span>

         <button class="btn"> <a href="#" class="slidelink" id="showReg2">Next</a></button>
         
           
          
           
           
           
        </form>
         
        </div>
      </div><!-- /end #content-register -->

      <div id="register2">
        <h2>Address information (2/3)</h2>
        <div class="content">
       <form id="register" name="register" action="#" method="post"> 
      <label>City</label>
        <input  class="txtfield" id="address1" placeholder="City name">
        <label>Street</label>
        <input  class="txtfield" id="address2" placeholder="Street name">
        <label>Apartment number</label>
        <input  class="txtfield" id="address3" placeholder="Apartment number">
        <br>
        <button class="btn"> <a href="#" class="slidelink" id="showReg3">Next</a></button>
    </form>

</div>

      
      </div><!-- /end #content-register2 -->


      <div id="register3">
        <h2>Last step (3/3)</h2>
        <div class="content">
       <form id="register" name="register" action="#" method="post"> 
       <label>Birth Date</label>
       <input type="date" id="birthdate" style="padding: 9px; border-radius: 2px;" class="txtfield">
      <label>Passport Number</label>
        <input  type="password" class="txtfield" id="address1" placeholder="Your passport number">
        <label>Password</label>
        <input  type="password" class="txtfield" id="address2" placeholder="Make a new password">
        <label>Emergency contact</label>
        <input  class="txtfield" id="address3" placeholder="Type in emergency phone number">
        <br>
        <button class="btn btn-primary">Submit</button>
    </form>


</div>
      
      </div><!-- /end #content-register3s -->
      
    </div><!-- /end #page -->
  </div><!-- /end #w -->
</body>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

</html>